[require]
GLSL >= 4.00
GL_AMD_gpu_shader_half_float

[fragment shader]
#version 400
#extension GL_AMD_gpu_shader_half_float : require

out vec4 colour;

void main()
{
#if GL_AMD_gpu_shader_half_float == 1
	colour = vec4(0.0, 1.0, 0.0, 0.0);
#else
	colour = vec4(1.0, 0.0, 0.0, 0.0);
#endif
}


[test]
draw rect -1 -1 2 2
relative probe rgba (0.5, 0.5) (0.0, 1.0, 0.0, 0.0)
